@model IEnumerable<MovieTicketBooking.Models.SedisteZaProekcija>

@{
    ViewData["Title"] = "Index";
}

<h1>Select seats:</h1>

<div class="text-center w-50 mx-auto">
    <form method="post" asp-controller="" asp-action="">
        @for (int i = 0; i < Model.ToList().Count; i++)
        {
            var item = Model.ToList()[i];
            if (i % 4 == 0)
            {
                @:<div class="row mb-3">
                }
                      <div class="col-3">
                          <p class="m-0 lead">@(i+1)</p>

                          @if (item.Status.Equals("available"))
                          {
                              <p class="m-0">
                                  <i class="fas fa-couch fa-2x text-success"></i>
                              </p>
                          }
                          @if (item.Status.Equals("reserved"))
                          {
                              <p class="m-0">
                                  <i class="fas fa-couch fa-2x text-danger"></i>
                              </p>
                          }

                          <p class="m-0">
                              @if (item.Status.Equals("available"))
                              {
                                  <input type="checkbox" />
                              }
                              @if (item.Status.Equals("reserved"))
                              {
                                  <input type="checkbox" disabled />
                              }
                          </p>
                      </div>

                if ((i + 1) % 4 == 0)
                {
                @:</div>
            }
        }
    </form>
</div>
