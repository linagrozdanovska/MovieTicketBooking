@model IEnumerable<MovieTicketBooking.Models.Rezervacija>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BrojNaSedista)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DatumIVreme)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdKorisnikNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdProekcijaNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BrojNaSedista)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatumIVreme)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdKorisnikNavigation.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdProekcijaNavigation.Tip)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdRezervacija">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdRezervacija">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdRezervacija">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
